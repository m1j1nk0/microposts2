<% if users.any? %>
   <ul class="media-list">
     <% users.each do |user| %>
       <li class="media">
        <div class="media-left">
          <img src="<%= gravatar_url(user, { size: 50 }) %>" class="media-object img-rounded">
        </div>         
        <div class="media-body">
          <%= user.name %>
          <%= link_to 'View Profile', user_path(user) %>
        </div>
       </li>
     <% end %>
   </ul>
<% end %>